<p id="notice"><%= notice %></p>

<h1>Orders</h1>
<strong class="text-center" style="background-color:black;color:white;"><%= link_to 'Start New Order', new_user_order_path %></strong>
<table class="table table-striped">
  <thead>
    <tr>
      <th>order</th>
      <th>Restrants</th>
      <th>invited</th>
      <th>joined</th>
      <th>status</th>
      <th>Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>

        <td>
          <%= link_to 'Show', user_order_path(id: order) %>
          <%= link_to 'Edit', edit_user_order_path(id: order) %>
          <%= link_to 'Destroy', user_order_path(id: order), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
