<div class="container">
  <div class="page-header">
  <h1>Friends</h1>
</div>
</div>


<div class="container">
<div class="text-center">
<div class="row">
<div class="col-sm-12">


  <%= form_for User.new do |f| %>

  <div class="form-group">


<%= form_tag users_path, method: :get do %>
<%= text_field_tag :query, params[:query], class: 'form-control mr-sm-2 typeahead', id: "typeahead" %>
<%= submit_tag "Search" %>
<% end %>
</div>
</div>

</div>
<% end %><br/>


<div class="panel panel-default">
<div class="panel-heading">
  <div class="container">
    <h4><%= current_user.name%>'s Friends List</h4>
  </div>
</div>
  <div class="panel-body" id="frindesPanelBody">
    <div class="row">


            <div class="container">
              <!-- row of Friends -->
              <% for friendship in current_user.friendships %>
              <div class="row">
              <div class="col-sm-3">
              <!-- <h4><%= friendship.friend.name%></h4> -->
              <img src="<%= friendship.friend.avatar%>" width="80px" height="80px" class="img-thumbnail"/>

            <br/>


                <br>
                <%= h friendship.friend.name %>
                  (<%= link_to "remove", friendship, :method => :delete %>)

                <% end %>





            </div>
          </div>


</div>
  </div>

</div>
<p>
  <%= link_to "Find Friends", users_path %>
</p>
</div>
